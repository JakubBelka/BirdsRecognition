<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlolux"
    tools:context=".CameraActivity">

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otwórz kamerę"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="400dp"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="298dp"
        android:width="230dp"
        android:height="50dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/fileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRZEŚLIJ ZDJĘCIE"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="475dp"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="393dp"
        android:width="230dp"
        android:height="50dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustawienia"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="550dp"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="393dp"
        android:width="230dp"
        android:height="50dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded_button"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/colorPrimary"
        android:textSize="47dp"
        android:textStyle="bold"
        android:text="Birds Recognition App"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:layout_marginTop="275dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="22dp"
        android:text="Zastosowanie głębokich sieci neuronowych do rozpoznawania ptaków w środowisku miejskim" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:text="autor: Jakub Belka"
        android:textSize="22dp" />
</RelativeLayout>